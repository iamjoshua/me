---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Container from "../../components/Container.astro";
import QuestionCard from "../../components/QuestionCard.astro";

const questions = await getCollection("questions");
---

<Layout title="Questions">
  <div class="flex flex-col lg:flex-row">
    <header class="h-[calc(100dvh*0.8)] lg:h-dvh lg:w-1/3">
      <div
        class="w-full lg:w-1/3 lg:h-dvh lg:fixed rounded-4xl flex flex-col justify-center m-4 md:m-10 lg:m-10 lg:mt-0"
      >
        <div class="absolute top-10 left-0">
          <a
            href="/"
            class="flex items-center gap-2 text-gray-600 hover:text-gray-900 text-sm font-medium"
          >
            <svg
              class="w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Home
          </a>
        </div>
        <div
          class="text-sm font-medium tracking-widest text-gray-500 uppercase mb-4"
        >
          Philosophy
        </div>
        <div
          class={`text-3xl md:text-4xl font-light text-gray-700 mb-18 italic leading-tight font-[Crimson_Text]`}
        >
          I enjoy engaging with
        </div>

        <h1
          class="text-7xl md:text-6xl lg:text-7xl xl:text-7xl xl:tracking-tight lg:leading-18 font-bold leading-none tracking-tighter text-neutral-800"
        >
          Questions
        </h1>
      </div>
    </header>

    <Container>
      <main class="h-full max-w-4xl mx-auto">
        <div class="h-[calc(100dvh/5)]"></div>
        <div class="w-full lg:w-2/3 mb-22">
          <div class="grid gap-8">
            {
              questions.map((question) => (
                <QuestionCard
                  title={question.data.title}
                  excerpt={question.data.excerpt}
                  position={question.data.position}
                  id={question.id}
                />
              ))
            }
          </div>
        </div>
      </main>
    </Container>
  </div>
</Layout>
