---
interface Props {
  title?: string;
}

const { title, padding } = Astro.props as Props;

import "../styles/global.css";
import "@fontsource/inter";
import "@fontsource/crimson-text/400.css";
import "@fontsource/crimson-text/600.css";
import "@fontsource/crimson-text/400-italic.css";
import "@fontsource/space-mono/400.css";
import "@fontsource/space-mono/700.css";
import Logo from "@/components/elements/Logo.astro";
import Navigation from "@/components/elements/Navigation.astro";
import Frame from "@/components/Frame.astro";
import { cn } from "@/lib/utils";
import { ClientRouter } from "astro:transitions";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title ?? "Joshua Heiland | Philosopher & Creator"}</title>
    <slot name="head" />
    <ClientRouter />
  </head>
  <body class="bg-white">
    <slot />
    <header
      class={cn(
        "absolute top-5 flex items-center justify-between",
        "md:pl-10",
        "lg:top-auto lg:fixed lg:left-0 lg:bottom-5",
      )}
    >
      <Logo />
      <Navigation />
    </header>
    <Analytics />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  /* Custom slide animations */
  @keyframes slideInLeft {
    0% {
      transform: translateX(10px);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOutLeft {
    0% {
      transform: translateX(0);
      opacity: 1;
    }
    100% {
      transform: translateX(-10px);
      opacity: 0;
    }
  }

  @keyframes slideInRight {
    0% {
      transform: translateX(-10px);
      opacity: 0;
    }
    100% {
      transform: translateX(0);
      opacity: 1;
    }
  }

  @keyframes slideOutRight {
    0% {
      transform: translateX(0);
      opacity: 1;
    }
    100% {
      transform: translateX(10px);
      opacity: 0;
    }
  }

  @keyframes slideInUp {
    0% {
      transform: translateY(10px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideOutUp {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    100% {
      transform: translateY(-10px);
      opacity: 0;
    }
  }

  @keyframes slideInDown {
    0% {
      transform: translateY(-10px);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideOutDown {
    0% {
      transform: translateY(0);
      opacity: 1;
    }
    100% {
      transform: translateY(10px);
      opacity: 0;
    }
  }
</style>
