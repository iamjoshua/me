---
interface Props {
  title?: string;
}

const { title } = Astro.props as Props;

import "../styles/global.css";
import Analytics from "@vercel/analytics/astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ?? "Photography Collection"}</title>
    <slot name="head" />
  </head>
  <body>
    <slot />
    <script is:inline>
      window.webAnalyticsBeforeSend = (event) => {
        if (localStorage.getItem('va-disable')) return null;
        return event;
      };
    </script>
    <Analytics />
  </body>
</html>
