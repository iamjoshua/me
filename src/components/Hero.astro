---
import { cn } from "@/lib/utils";
import AnimateOnLoad from "./AnimateOnLoad.astro";
---

<AnimateOnLoad type="slideUp" duration="slow" class="py-16 px-4">
  <div class="max-w-4xl mx-auto">
    <h1
      class={cn(
        "text-3xl md:text-4xl font-thin leading-normal text-left md:text-right",
        //"bg-red-200 md:bg-blue-200 lg:bg-green-200 xl:bg-yellow-200",
      )}
    >
      <span class="block md:block lg:inline xl:inline">I engage with</span>
      <span class="block md:block lg:inline xl:inline"
        >problems in <a href="/questions" class="hover:text-gray-500 transition-colors">philosophy</a>,</span
      >
      <span class="block md:block lg:block xl:block">create digital tools,</span
      >
      <span class="block md:block lg:inline xl:inline">and <a href="/photography" class="hover:text-gray-500 transition-colors">make photos</a>.</span>
    </h1>
  </div>
</AnimateOnLoad>
