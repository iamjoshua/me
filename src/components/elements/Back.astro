---
interface Props {
  href: string;
  label: string;
}

const { href, label } = Astro.props;
---

<div class="hidden lg:block absolute top-10 left-0">
  <a
    href={href}
    class="flex items-center gap-2 text-gray-600 hover:text-gray-900 text-sm font-medium"
  >
    <svg
      class="w-4 h-4"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
    </svg>
    {label}
  </a>
</div>