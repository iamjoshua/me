---
interface Props {
  title: string;
  excerpt: string;
  category?: string;
  id: string;
}

const { title, excerpt, category, id } = Astro.props;
---

<a
  href={`/essays/${id}`}
  class="block rounded-lg hover:scale-101 hover:bg-neutral-50 p-5 -m-5 transition-all"
>
  <h3 class="text-xl font-semibold mb-3 text-gray-900">
    {title}
  </h3>
  <p class="text-gray-600 mb-4 leading-relaxed">
    {excerpt}
  </p>
  {
    category && (
      <div class="text-gray-800 mb-4">
        <div class="italic text-xs uppercase">Category:</div>
        <div class="font-bold">{category}</div>
      </div>
    )
  }
  <div class="flex justify-end">
    <span class="hidden text-sky-700 hover:text-blue-800 text-sm font-medium">
      Read more â†’
    </span>
  </div>
</a>