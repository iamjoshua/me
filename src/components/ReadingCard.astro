---
interface Props {
  title: string;
  author: string;
  status: string;
  type: string;
  category: string;
  startedAt?: string;
  completedAt?: string;
  notes?: string;
}

const { title, author, status, type, category, startedAt, completedAt, notes } =
  Astro.props;
---

<div
  class="w-full lg:w-64 p-5 rounded-md hover:shadow-sm hover:scale-101 transition-all"
>
  <h2 class="text-base font-semibold text-gray-900 mb-1">{title}</h2>
  <p class="text-sm text-gray-600 mb-2">by {author}</p>
  {
    status !== "completed" && (
      <span class="inline-block px-1.5 py-0.5 text-[10px] font-medium rounded-full bg-sky-00 text-white bg-sky-700 mb-2">
        {status}
      </span>
    )
  }
  {
    (startedAt || completedAt) && (
      <div class="text-xs text-gray-400 flex items-center gap-1">
        <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
          <path
            fill-rule="evenodd"
            d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
            clip-rule="evenodd"
          />
        </svg>
        {startedAt} â†’ {completedAt}
      </div>
    )
  }
</div>
