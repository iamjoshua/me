---
interface Props {
  type?: "fade" | "slideUp" | "slideDown" | "slideLeft" | "slideRight";
  duration?: "fast" | "normal" | "slow";
  delay?: "none" | "short" | "medium" | "long" | number;
  as?: keyof HTMLElementTagNameMap;
  class?: string;
  [key: string]: any; // Allow any additional props to be passed through
}

const { 
  type = "fade",
  duration = "normal",
  delay = "none",
  as: Tag = "div",
  class: className = "",
  ...rest
} = Astro.props;

const delayValue = typeof delay === "number" ? `${delay}s` : delay;
const animationClass = typeof delay === "number" ? `animate-${type}-${duration}-custom` : `animate-${type}-${duration}-${delay}`;
---

<Tag class={`${className} ${animationClass}`} style={typeof delay === "number" ? `animation-delay: ${delayValue}; animation-fill-mode: both;` : ""} {...rest}>
  <slot />
</Tag>

<style>
  /* Fade animations */
  .animate-fade-fast-none {
    animation: fadeIn 0.2s ease-out;
  }
  .animate-fade-normal-none {
    animation: fadeIn 0.3s ease-out;
  }
  .animate-fade-slow-none {
    animation: fadeIn 0.5s ease-out;
  }
  .animate-fade-fast-short {
    animation: fadeIn 0.2s ease-out 0.1s both;
  }
  .animate-fade-normal-short {
    animation: fadeIn 0.3s ease-out 0.1s both;
  }
  .animate-fade-slow-short {
    animation: fadeIn 0.5s ease-out 0.1s both;
  }
  .animate-fade-fast-medium {
    animation: fadeIn 0.2s ease-out 0.2s both;
  }
  .animate-fade-normal-medium {
    animation: fadeIn 0.3s ease-out 0.2s both;
  }
  .animate-fade-slow-medium {
    animation: fadeIn 0.5s ease-out 0.2s both;
  }
  .animate-fade-fast-long {
    animation: fadeIn 0.2s ease-out 0.4s both;
  }
  .animate-fade-normal-long {
    animation: fadeIn 0.3s ease-out 0.4s both;
  }
  .animate-fade-slow-long {
    animation: fadeIn 0.5s ease-out 0.4s both;
  }

  /* Slide Up animations */
  .animate-slideUp-fast-none {
    animation: slideUp 0.2s ease-out;
  }
  .animate-slideUp-normal-none {
    animation: slideUp 0.3s ease-out;
  }
