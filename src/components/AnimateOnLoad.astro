  }
  .animate-slideLeft-normal-custom {
    animation: slideLeft 0.3s ease-out both;
  }
  .animate-slideLeft-slow-custom {
    animation: slideLeft 0.5s ease-out both;
  }
  .animate-slideRight-fast-custom {
    animation: slideRight 0.2s ease-out both;
  }
  .animate-slideRight-normal-custom {
    animation: slideRight 0.3s ease-out both;
  }
  .animate-slideRight-slow-custom {
    animation: slideRight 0.5s ease-out both;
  }

  /* Slide Down animations */
  .animate-slideDown-fast-none {
    animation: slideDown 0.2s ease-out;
  }
  .animate-slideDown-normal-none {
    animation: slideDown 0.3s ease-out;
  }
  .animate-slideDown-slow-none {
    animation: slideDown 0.5s ease-out;
  }
  .animate-slideDown-fast-short {
    animation: slideDown 0.2s ease-out 0.1s both;
  }
