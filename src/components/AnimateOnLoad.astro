  }
  .animate-slideUp-fast-short {
    animation: slideUp 0.2s ease-out 0.1s both;
  }
  .animate-slideUp-normal-short {
    animation: slideUp 0.3s ease-out 0.1s both;
  }
  .animate-slideUp-slow-short {
    animation: slideUp 0.5s ease-out 0.1s both;
  }
  .animate-slideUp-fast-medium {
    animation: slideUp 0.2s ease-out 0.2s both;
  }
  .animate-slideUp-normal-medium {
    animation: slideUp 0.3s ease-out 0.2s both;
  }
  .animate-slideUp-slow-medium {
    animation: slideUp 0.5s ease-out 0.2s both;
  }
  .animate-slideUp-fast-long {
    animation: slideUp 0.2s ease-out 0.4s both;
  }
  .animate-slideUp-normal-long {
    animation: slideUp 0.3s ease-out 0.4s both;
  }
  .animate-slideUp-slow-long {
    animation: slideUp 0.5s ease-out 0.4s both;
  }
  
  /* Custom animations (delay set via style) */
  .animate-fade-fast-custom {
    animation: fadeIn 0.2s ease-out both;
  }
  .animate-fade-normal-custom {
    animation: fadeIn 0.3s ease-out both;
  }
  .animate-fade-slow-custom {
    animation: fadeIn 0.5s ease-out both;
  }
  .animate-slideUp-fast-custom {
    animation: slideUp 0.2s ease-out both;
  }
  .animate-slideUp-normal-custom {
    animation: slideUp 0.3s ease-out both;
  }
