---
import Layout from "@/layouts/Layout.astro";
import Timeline from "@/components/Timeline.astro";
import Hero from "@/components/Hero.astro";
import Header from "@/components/elements/Header.astro";
import FeaturedWritings from "@/components/FeaturedWritings.astro";
---

<Layout>
  <div class="flex h-[100dvh]">
    <div class="w-1/2 flex items-center justify-center">
      <Hero />
    </div>
    <div class="w-1/2 flex items-center justify-center p-5">
      <div class="flex flex-col gap-14">
        <div>
          <a
            href="/readings"
            class="text-sky-800 hover:text-blue-800 text-sm font-medium"
          >
            <Header>What I've Been Reading</Header>
          </a>
          <Timeline limit={3} />
          <a
            href="/readings"
            class="text-sky-800 hover:text-blue-800 text-sm font-medium bg-neutral-100 rounded-full py-1 px-4"
            >All →</a
          >
        </div>
        <div class="w-[400px]">
          <Header>What I've Been Thinking</Header>
          <div class="flex flex-col gap-5 w-full">
            <FeaturedWritings
              questionId="is-mind-uploading-possible-in-principle"
            />
          </div>
          <a
            href="/questions"
            class="text-sky-800 hover:text-blue-800 text-sm font-medium"
            >All →</a
          >
        </div>
      </div>
    </div>
  </div>
</Layout>
